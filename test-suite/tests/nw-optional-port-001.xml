   <t:description>
      <p>Test that port is optional on p:with-input</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>
         <p:identity>
            <p:with-input>
               <p:inline>
                  <doc xmlns=""/>
               </p:inline>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:ns prefix="p" uri="http://www.w3.org/ns/xproc"/>
         <s:pattern>
            <s:rule context="/*">
               <s:assert test="self::doc">The pipeline root is not doc.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
