<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0"
        xmlns="http://www.w3.org/1999/xhtml"
        expected="pass">
   <t:info>
      <t:title>with-input-066</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2018-08-22T16:48:12+02:00</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description>
               <p>New tests and some previous texts adapted to recent development</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description>
      <p>Tests p:with-input with select and pipe</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>
      
         <p:identity name="source">
            <p:with-input>
               <doc xmlns="">
                  <element/>
               </doc>
            </p:with-input>
         </p:identity>      
     
         <p:identity>
            <p:with-input select="/doc/*">
               <p:pipe step="source" port="result"/>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="element">The document root is not element.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
